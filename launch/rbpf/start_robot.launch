<?xml version="1.0"?>
<launch>
  <!-- Spawn simulated quadrotor uav -->
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
    <arg name="controllers" value="
        controller/attitude
        controller/velocity
        controller/position
        "/>
    <arg name="x" value="-2.789514"/>
    <arg name="y" value="-2.494958"/>
    <arg name="z" value="-4"/>
  </include>

  <!-- Scan to Point cloud conversion -->
  <node name="scan2cloud" pkg="hi_lavatube" type="scan2cloud" output="screen" >
  </node>

  <!-- Publish tf from the world to the map frame -->
  <node pkg="tf" type="static_transform_publisher" name="map_world_broadcaster" args="0 0 0 0 0 0 world /map 100" />

  <!-- Run Octomap server -->
	<node name="octomap_server" pkg="octomap_server" type="octomap_server_node">
		<remap from="cloud_in" to="/cloud" />
		<param name="frame_id" type="string" value="map" />
		<param name="latch" value="false" />
		<param name="resolution" value="0.05" />
  </node>

  <!-- Console -->
  <include file="$(find hi_lavatube)/launch/sanwa_gamepad.launch" >
    <arg name="control_mode" value="velocity"/>
  </include>

  <!-- Start rviz visualization with preset config -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find hi_lavatube)/config/octomap_test.rviz"/>

</launch>
